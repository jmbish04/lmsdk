optional=true

# Use official npm registry
registry=https://registry.npmjs.org/

# Require valid SSL certificates when downloading packages
strict-ssl=true

# Fail if package.json engine requirements don't match current Node version
engine-strict=true

# Save exact versions in package.json (no semver prefix)
save-exact=true

save-prefix=

# Always generate package-lock.json for reproducible installs
package-lock=true

# Run security audits on package installation
audit=true

# Only report moderate and above severity vulnerabilities
audit-level=moderate

# Disable funding messages from packages
fund=false

# Disable progress bars for cleaner CI output
progress=false

# Show warnings but not info messages
loglevel=warn

ignore-scripts=true
